#!/bin/bash -ue
filename="$1"
basename="${filename%.*}"
echo "Decrypting..."
unbox <"$filename" >"$basename.tar.xz"
echo "Decompressing..."
bar "$basename.tar.xz" | unxz >"$basename.tar"
echo "Extracting..."
tar xaf "$basename.tar"
echo "Removing temporary files..."
rm -rf "$basename.tar" "$basename.tar.xz"
echo ">>> Done.  Result placed in $basename <<<"
